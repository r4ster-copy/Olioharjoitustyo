<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="5dp"
    android:background="#C3B1E1"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/LutemonImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        app:srcCompat="@drawable/stock_lutemon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <!-- Nimi ja tyyppi kuvakkeena -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/LutemonListName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lutemonin nimi"
                android:textColor="#0F0231"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/LutemonTypeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="6dp"
                android:contentDescription="Type icon"
                android:scaleType="fitCenter"
                android:src="@drawable/stock_lutemon" />
        </LinearLayout>

        <TextView
            android:id="@+id/LutemonListAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Attack: "
            android:textColor="#0F0231"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/LutemonListDefence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Defence: "
            android:textColor="#0F0231"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/LutemonListTrainingPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Training Points: "
            android:textColor="#0F0231"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/LutemonListTotalFights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Total Fights: "
            android:textColor="#0F0231"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/LutemonListLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Location: "
            android:textColor="#0F0231"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/LutemonListLife"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="HP: "
            android:textColor="#0F0231"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/LutemonListExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="XP: "
            android:textColor="#0F0231"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/LutemonListTrainingDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Training Days: "
            android:textColor="#0F0231"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/LutemonListFightsWon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Fights Won: "
            android:textColor="#0F0231"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>

