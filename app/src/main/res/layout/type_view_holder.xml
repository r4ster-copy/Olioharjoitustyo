<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:background="#FFF2D5"
    android:orientation="horizontal"
    android:padding="15dp">

    <!-- Vasen: tyyppikuvake ja nimi -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/TypeIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/fire_type" />

        <TextView
            android:id="@+id/TypeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Fire"
            android:textColor="#B63209"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Oikea: vahva ja heikko tyyppi -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <!-- Strong -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strong against"
            android:textColor="#4D2E03"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/StrongIcon1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/grass_type" />

            <TextView
                android:id="@+id/StrongText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Grass"
                android:textColor="#4D2E03"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/StrongIcon2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/normal_type" />

            <TextView
                android:id="@+id/StrongText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Normal"
                android:textColor="#4D2E03"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Weak -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Weak against"
            android:textColor="#4D2E03"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/WeakIcon1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/fairy_type" />

            <TextView
                android:id="@+id/WeakText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Fairy"
                android:textColor="#4D2E03"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/WeakIcon2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/shadow_type" />

            <TextView
                android:id="@+id/WeakText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Shadow"
                android:textColor="#4D2E03"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/TrainingPreference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Training Preference"
            android:textColor="#4D2E03"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
