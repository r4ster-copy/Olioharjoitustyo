<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/printInfoFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF3E4"
    tools:context=".fight_fragments.FragmentPrintInfo">

    <!-- Header -->

    <!-- Voittajan kuva -->

    <TextView
        android:id="@+id/HeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Fight Is Over!"
        android:textColor="#B63209"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonBackToMain" />

    <!-- Voittajan nimi ja väri -->

    <ImageView
        android:id="@+id/WinnerImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="45dp"
        android:scaleType="fitCenter"
        android:src="@drawable/stock_lutemon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HeaderText" />

    <TextView
        android:id="@+id/WinnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of Winner"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#4D2E03"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/WinnerImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Statsit -->
    <TextView
        android:id="@+id/WinnerStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATK: 7\nDEF: 4\nHP: 20/20\nXP: 3"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#4D2E03"
        app:layout_constraintTop_toBottomOf="@id/WinnerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Voittajan historiatilastot -->
    <TextView
        android:id="@+id/WinnerHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battles: 3\nWins: 2\nTraining Days: 5"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="#4D2E03"
        app:layout_constraintTop_toBottomOf="@id/WinnerStats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Tulosviesti -->

    <TextView
        android:id="@+id/ResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Name of Winner wins the battle!"
        android:textColor="#B63209"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WinnerHistory" />

    <!-- Takaisin päävalikkoon -->

    <ImageButton
        android:id="@+id/ButtonBackToMain"
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="#FFB44D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
